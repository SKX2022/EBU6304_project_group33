<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.finance.controller.GraphController"
            styleClass="root"
            stylesheets="@../css/style.css">
    <top>
        <fx:include source="NavigationBar.fxml"/>
    </top>

    <center>
        <HBox alignment="TOP_CENTER" spacing="20">
            <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>

            <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" maxWidth="900" spacing="20">
                <!-- 标题和日期选择区域 -->
                <HBox alignment="CENTER_LEFT" spacing="20">
                    <Label text="收支情况" styleClass="label-title"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <HBox alignment="CENTER_RIGHT"
                          styleClass="classification-box"
                          spacing="8">
                        <padding>
                            <Insets top="10" bottom="10" left="15" right="15"/>
                        </padding>
                        <ComboBox fx:id="Year0" promptText="开始年" styleClass="input-field"/>
                        <ComboBox fx:id="Month0" promptText="月" styleClass="input-field"/>
                        <ComboBox fx:id="Day0" promptText="日" styleClass="input-field"/>
                        <Text text="至" styleClass="label-data"/>
                        <ComboBox fx:id="Year1" promptText="结束年" styleClass="input-field"/>
                        <ComboBox fx:id="Month1" promptText="月" styleClass="input-field"/>
                        <ComboBox fx:id="Day1" promptText="日" styleClass="input-field"/>
                        <Button fx:id="submit" onAction="#submitDateRange"
                                styleClass="button-blue"
                                text="提交"/>
                    </HBox>
                </HBox>

                <!-- 图例标识区域 -->
                <HBox alignment="CENTER_LEFT" spacing="30" styleClass="classification-box">
                    <padding>
                        <Insets top="10" bottom="10" left="20" right="20"/>
                    </padding>
                    <HBox alignment="CENTER_LEFT" spacing="8">
                        <Circle radius="5" fill="#FF6B6B"/>
                        <Label text="支出" styleClass="label-data"/>
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="8">
                        <Circle radius="5" fill="#4CAF50"/>
                        <Label text="收入" styleClass="label-data"/>
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="8">
                        <Circle radius="5" fill="#4A90E2"/>
                        <Label text="盈余" styleClass="label-data"/>
                    </HBox>
                </HBox>

                <!-- 优化的图表区域 - 改进线条效果和动画 -->
                <LineChart fx:id="financeLineChart"
                           HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"
                           styleClass="classification-box, smooth-chart"
                           animated="true"
                           createSymbols="true"
                           prefHeight="450"
                           minHeight="400"
                           legendVisible="true">
                    <padding>
                        <Insets top="25" right="25" bottom="25" left="25"/>
                    </padding>
                    <xAxis>
                        <CategoryAxis fx:id="xAxis"
                                      animated="true"
                                      tickLabelFill="#555555"
                                      tickLabelGap="8"
                                      tickLabelRotation="0"
                                      styleClass="axis">
                            <label>
                                <Label text="日期" styleClass="axis-label"/>
                            </label>
                            <tickLabelFont>
                                <javafx.scene.text.Font size="12"/>
                            </tickLabelFont>
                        </CategoryAxis>
                    </xAxis>
                    <yAxis>
                        <NumberAxis fx:id="yAxis"
                                    lowerBound="0"
                                    animated="true"
                                    tickLabelFill="#555555"
                                    tickLabelGap="8"
                                    minorTickCount="4"
                                    autoRanging="true"
                                    forceZeroInRange="true"
                                    styleClass="axis">
                            <label>
                                <Label text="金额 (元)" styleClass="axis-label"/>
                            </label>
                            <tickLabelFont>
                                <javafx.scene.text.Font size="12"/>
                            </tickLabelFont>
                        </NumberAxis>
                    </yAxis>
                </LineChart>

                <!-- AI分析按钮 -->
                <Button onAction="#analyzeAndSuggest"
                        styleClass="button-primary"
                        text="AI 分析收支情况并给出储蓄建议">
                    <graphic>
                        <ImageView fitHeight="24" fitWidth="24">
                            <image>
                                <Image url="@../images/logo.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <padding>
                        <Insets top="12" bottom="12" left="20" right="20"/>
                    </padding>
                </Button>
            </VBox>
        </HBox>
    </center>
</BorderPane>