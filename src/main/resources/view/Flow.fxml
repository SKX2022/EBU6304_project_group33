<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.finance.controller.FlowController"
            stylesheets="@../css/style.css">

    <top>
        <fx:include source="NavigationBar.fxml" />
    </top>
    <center>
        <VBox spacing="20" style="-fx-padding: 20; -fx-background-color: white;">

            <!-- 筛选条件区域 -->
            <HBox spacing="15" styleClass="filter-bar">
                <VBox spacing="5" style="-fx-alignment: TOP_LEFT;">
                    <ComboBox fx:id="filterComboBox" promptText="All" styleClass="filter-dropdown">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                            </FXCollections>
                        </items>
                    </ComboBox>
                    <Label text="1" styleClass="count-badge"/>
                </VBox>

                <ComboBox fx:id="categoryComboBox" promptText="类别" styleClass="filter-dropdown"/>

                <DatePicker fx:id="startDatePicker" promptText="Start Date"/>
                <Label text="~"/>
                <DatePicker fx:id="endDatePicker" promptText="End Date"/>

                <Button text="Import Excel" onAction="#importTransactions"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
            </HBox>

            <!-- 数据表格 -->
            <TableView fx:id="transactionsTable">
                <columns>
                    <TableColumn fx:id="typeColumn" text="类型" prefWidth="100"/>
                    <TableColumn fx:id="projectColumn" text="项目" prefWidth="200"/>
                    <TableColumn fx:id="timeColumn" text="时间" prefWidth="150"/>
                    <TableColumn fx:id="categoryColumn" text="收支类型" prefWidth="150"/>
                    <TableColumn fx:id="amountColumn" text="具体数字" prefWidth="150"/>
                </columns>
                <items>

                </items>
            </TableView>

            <!-- 分页控制 -->
            <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="pagination">
                <!-- 在原FXML文件中添加按钮事件绑定 -->
                <Button text="加入记录"
                        fx:id="addButton"
                        onAction="#handleAddTransaction"
                        styleClass="pagination-button"/>

                <Button fx:id="previousButton" text="Previous" styleClass="pagination-button"/>
                <Label fx:id="pageInfoLabel" text="Page 1 of 1" styleClass="pagination-label"/>
                <Button fx:id="nextButton" text="Next" styleClass="pagination-button"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>

