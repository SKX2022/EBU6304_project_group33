<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.finance.controller.HomeController"
            stylesheets="@../css/style.css">

    <top>
        <fx:include source="NavigationBar.fxml" />
    </top>

    <center>
        <HBox spacing="40" alignment="TOP_LEFT" style="-fx-padding: 30;">

            <!-- 左侧：图片 + 本月收支 + 总进度条 -->
            <VBox spacing="30">

                <!-- 图片和本月收入支出 -->
                <StackPane alignment="TOP_LEFT">
                    <ImageView fitHeight="200" fitWidth="360" preserveRatio="true">
                        <image>
                            <Image url="@../images/m.png" />
                        </image>
                    </ImageView>
                    <VBox spacing="6" style="-fx-padding: 20;">
                        <Label text="This month" styleClass="label-title"/>
                        <Label fx:id="monthlyIncomeLabel" text="本月收入：¥0.00" styleClass="label-data"/>
                        <Label fx:id="monthlyExpenseLabel" text="本月支出：¥0.00" styleClass="label-data"/>
                        <Label fx:id="monthlySurplusLabel" text="本月盈余：¥0.00" styleClass="label-data"/>
                    </VBox>
                </StackPane>

                <!-- 总收入支出盈余进度条 -->
                <VBox spacing="15">
                    <Label text="Summary of total income and expenditure" styleClass="label-section"/>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="收入"/>
                        <ProgressBar fx:id="incomeProgressBar" prefWidth="300" progress="0.0"/>
                        <Label fx:id="totalIncomeLabel" text="总收入：¥0.00"/>
                    </HBox>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="支出"/>
                        <ProgressBar fx:id="expenseProgressBar" prefWidth="300" progress="0.0"/>
                        <Label fx:id="totalExpenseLabel" text="总支出：¥0.00"/>
                    </HBox>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="盈余"/>
                        <ProgressBar fx:id="surplusProgressBar" prefWidth="300" progress="0.0"/>
                        <Label fx:id="totalSurplusLabel" text="总盈余：¥0.00"/>
                    </HBox>
                </VBox>
            </VBox>

            <!-- 右侧：分类垂直排列 -->
            <VBox spacing="20">

                <VBox spacing="10" styleClass="classification-box">
                    <Label text="Expenditure classification" styleClass="label-section"/>
                    <ListView fx:id="expenseCategoryList" prefHeight="100"/>
                    <Button text="Enter for more information" onAction="#goExpenditureAnalysis" styleClass="button-blue"/>
                </VBox>

                <VBox spacing="10" styleClass="classification-box">
                    <Label text="Income classification" styleClass="label-section"/>
                    <ListView fx:id="incomeCategoryList" prefHeight="100"/>
                    <Button text="Enter for more information" onAction="#goIncomeAnalysis" styleClass="button-blue"/>
                </VBox>

            </VBox>
        </HBox>
    </center>
</BorderPane>